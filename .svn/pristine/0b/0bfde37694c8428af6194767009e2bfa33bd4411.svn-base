/*---------------폰트지정-----------------*/

@charset "utf-8";
@import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700;800&family=Roboto&display=swap');

@font-face {
	font-family: 'Gmarket Sans';    font-style: normal;    font-weight: 700;
	src: local('Gmarket Sans Bold'), local('GmarketSans-Bold'),
	url('http://script.ebay.co.kr/fonts/GmarketSansBold.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
	url('http://script.ebay.co.kr/fonts/GmarketSansBold.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
}
@font-face {
	font-family: 'Gmarket Sans';    font-style: normal;    font-weight: 500;
	src: local('Gmarket Sans Medium'), local('GmarketSans-Medium'),
	url('http://script.ebay.co.kr/fonts/GmarketSansMedium.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
	url('http://script.ebay.co.kr/fonts/GmarketSansMedium.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
    unicode-range:U+0041-005A, U+0061-007A
}
@font-face {
	font-family: 'Gmarket Sans';    font-style: normal;    font-weight: 300;
	src: local('Gmarket Sans Light'), local('GmarketSans-Light'),
	url('http://script.ebay.co.kr/fonts/GmarketSansLight.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
	url('http://script.ebay.co.kr/fonts/GmarketSansLight.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
    unicode-range:U+0041-005A, U+0061-007A
}

/*---------------공통속성 시작-----------------*/

* {
	margin: 0px;
	padding: 0px;
	box-sizing: border-box;
}

a {
	text-decoration: none;
	color: #3d4d4d;
}

ul {list-style: none;}

.cen {
	width: 100%;
	max-width: 1200px;
	margin: auto;
}

body {
	color: #3d3d3d;
	font-family: 'Gmarket Sans', 'Nanum Gothic', sans-serif;
}

input:focus, button:focus {outline:none;}

button {
    cursor: pointer;
}

.red {
    color : #ff5959;
}

input::placeholder {
    color: #b7b7b7;
    font-family: 'Gmarket Sans', 'Nanum Gothic', sans-serif;
} 

/* Change the color to your own background color */
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active {
    transition: background-color 5000s ease-in-out 0s;
    -webkit-transition: background-color 9999s ease-out;
    -webkit-box-shadow: 0 0 0px 1000px white inset !important;
    -webkit-text-fill-color: #3d3d3d !important;
}

/*----------------------공통속성 끝---------------------*/

/*---------------------스크롤 막기----------------------*/
.scrollOff {
    /*position:fixed;*/
    overflow:hidden;
    height:100%;
    width: 100%;
}

.scrollStyle::-webkit-scrollbar {
    width: 6px;
}
.scrollStyle::-webkit-scrollbar-track {
    background-color: transparent;
    padding: 10px;
}
.scrollStyle::-webkit-scrollbar-thumb {
    border-radius: 3px;
    background-color: #b0cff5; 
}
.scrollStyle::-webkit-scrollbar-button {
    width: 0;
    height: 0;
}

.scrollNone{ -ms-overflow-style: none; }

.scrollNone::-webkit-scrollbar{ display:none; }

#mask {
    position:fixed;
    right: 0;
    bottom: 0;
    left:0;
    top:0;
    z-index: 50;  
    background-color: transparent;
	display: none;
}

/*-----------------여기부터 태블릿pc---------------------*/
@media all and (max-width: 1020px) {
    .cen {
        width: 85%;
    }
}

/*-----------------여기부터 모바일버전-------------------*/
@media all and (max-width:767px) {
    .cen {
        width: 100%;
    }
}