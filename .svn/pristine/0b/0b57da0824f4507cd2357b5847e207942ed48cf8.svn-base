* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
    color: black;
}

header {
    height: 12vh;
    background-color: rgb(153, 213, 239);
    border: 1px solid black;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 999;
}

.menubars {
    background-color: white;
    border: 2px solid red;
    display: none;

}

/* #navbar:hover ~ .menubars {
    display: block;
} */
a {
    text-decoration: none;
}

ul,
li {
    display: inline-block;
}

h1 {
    position: absolute;
    left: 100px;
}

#mybtn {
    position: absolute;
    right: 20px;
}

.main {
    position: relative;
    height: 90vh;
}

.side {
    border-right: 2px solid black;
    position: absolute;
    width: 10%;
    height: 90vh;
    text-align: center;
    /* 가운데 정렬 */
    padding-top: 20px;
    /* 위쪽 여백 추가 (원하는 여백 크기로 조절) */
}

.side input[type="button"] {
    margin-bottom: 10px;
    /* 아래쪽 여백 추가 (원하는 여백 크기로 조절) */
}

.con {
    padding: 30px 20% 30px 20%;
    height: 90vh;
    width: 90%;
    left: 10%;
    text-align: center;
    position: absolute;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(4, 1fr);
    grid-gap: 10px;
    grid-template-areas:
        'a a b'
        'c c c'
        'd e f'
        'g g h';
}

.con div {
    background-color: rgb(153, 213, 239);
    width: 100%;
    height: 100px;
    margin: auto;
    border: 1px solid black;

}
.main {
    background-color: rgb(241, 241, 241);
}

#img {
    grid-area: a;
}

#cal {
    grid-area: b;
}

#addr {
    grid-area: c;
}

#borad {
    grid-area: d;
}

#freeBorad {
    grid-area: e;
}

#meetRoom {
    grid-area: f;
}

#mail {
    grid-area: g;

}

#car {
    grid-area: h;
}

.depth1 {
    position: relative;
    width: 100px;
    overflow: hidden;
}
.depth2{
    position: absolute;
    display: inline-block;
    width: 100%;
    height: 0;
    top: 22px;
    background-color: red;
    left: 50%;
    transform: translateX(-50%);
}
.depth2:hover {
    
    height: 100%;
}
