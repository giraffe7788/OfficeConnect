<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="atchFile">

	<insert id="insertAtchFile" parameterType="fileVO">
		INSERT INTO IMAGE
		(
		EMP_NO,
		IMG_PATH,
		IMG_NAME
		)
		VALUES
		(
		#{empNo},
		#{imgPath},
		#{imgName}
		)
	</insert>
	
	<select id="getAtchFileList" resultType="fileVO">
	
		select * from IMAGE
		where emp_no = #{empNo}
	
	</select>
	
	<select id="getAtchFile" resultType="fileVO">
	
		select * from IMAGE
		where emp_no = #{empNo}
	
	</select>

	<delete id="deleteAtchFile">
		delete from IMAGE
		where emp_no = #{empNo}
	</delete>
	
</mapper>