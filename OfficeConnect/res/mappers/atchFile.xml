	<insert id="insertAtchFile" parameterType="Integer">
		INSERT INTO IMAGE
		(
		EMP_NO,
		IMG_PATH,
		IMG_EXTIN
		)
		VALUES
		(
		#{empNo},
		#{imgPath},
		#{imgExtin}
		)
	</insert>
	
	<select id="getAtchFileList" resultType="fileVO">
	
		select * from IMAGE
		where emp_no = #{empNo}
	
	</select>
	
	<select id="getAtchFile" resultType="fileVO">
	
		select * from IMAGE
		where emp_no = #{empNo}
	
	</select>

	<delete id="deleteAtchFile">
		delete from IMAGE
		where emp_no = #{empNo}
	</delete>
	
